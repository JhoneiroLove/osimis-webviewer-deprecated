set -x
set -e

# Run Xvfb on a Virtual Display
export XVFB_WHD=${XVFB_WHD:-1280x720x16}
test -e /tmp/.X99-lock || Xvfb :99 -ac -screen 0 $XVFB_WHD -nolisten tcp +extension RANDR +extension GLX +render -noreset &
export DISPLAY=:99.0

# Tell Karma where Chrome Is
export CHROME_BIN=$(which google-chrome)

cd tests/osimis-test-runner/
python3 osimis-test-runner.py --manual-orthanc=${ORTHANC_URL:-http://localhost:8042/}
cd ../..